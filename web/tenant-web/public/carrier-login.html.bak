<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>鎵胯繍鍟嗙櫥褰?- 鐗╂祦绠＄悊绯荤粺</title>
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(135deg, #f0f9ff, #e0f2fe);
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      margin: 0;
      padding: 20px;
    }

    .login-container {
      background: white;
      padding: 40px;
      border-radius: 16px;
      box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.1);
      width: 100%;
      max-width: 450px;
      margin: 20px;
      position: relative;
      overflow: hidden;
    }

    .login-container::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 6px;
      background: linear-gradient(90deg, #f97316, #ea580c);
    }

    .login-title {
      text-align: center;
      margin-bottom: 32px;
      color: #1e293b;
      font-size: 1.75rem;
      font-weight: 700;
    }

    .form-group {
      margin-bottom: 24px;
    }

    label {
      display: block;
      margin-bottom: 8px;
      color: #374151;
      font-weight: 500;
    }

    input {
      width: 100%;
      padding: 14px;
      border: 2px solid #e2e8f0;
      border-radius: 8px;
      font-size: 16px;
      transition: border-color 0.3s ease, box-shadow 0.3s ease;
      box-sizing: border-box;
    }

    input:focus {
      outline: none;
      border-color: #f97316;
      box-shadow: 0 0 0 3px rgba(249, 115, 22, 0.2);
    }

    button {
      width: 100%;
      padding: 14px;
      background: linear-gradient(135deg, #f97316, #ea580c);
      color: white;
      border: none;
      border-radius: 8px;
      font-size: 16px;
      font-weight: 600;
      cursor: pointer;
      transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    button:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 15px -3px rgba(249, 115, 22, 0.3), 0 4px 6px -2px rgba(249, 115, 22, 0.15);
    }

    button:active {
      transform: translateY(0);
    }

    button:disabled {
      opacity: 0.6;
      cursor: not-allowed;
      transform: none;
      box-shadow: none;
    }

    .message {
      margin-top: 20px;
      padding: 12px;
      border-radius: 8px;
      text-align: center;
      display: none;
      font-weight: 500;
    }

    .error {
      background-color: #fee2e2;
      color: #dc2626;
      border-left: 4px solid #dc2626;
    }

    .success {
      background-color: #d1fae5;
      color: #059669;
      border-left: 4px solid #059669;
    }

    .logo-container {
      text-align: center;
      margin-bottom: 24px;
    }

    .logo {
      width: 80px;
      height: 80px;
      background: linear-gradient(135deg, #f97316, #ea580c);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 16px;
      color: white;
      font-size: 32px;
      font-weight: bold;
    }

    .links {
      text-align: center;
      margin-top: 20px;
      color: #64748b;
    }

    .links a {
      color: #f97316;
      text-decoration: none;
      font-weight: 500;
    }

    .links a:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <div class="login-container">
    <div class="logo-container">
      <div class="logo">LMS</div>
      <h2 class="login-title">鎵胯繍鍟嗙櫥褰?/h2>
    </div>
    <form id="carrierLoginForm">
      <div class="form-group">
        <label for="email">閭:</label>
        <input type="email" id="email" name="email" required placeholder="璇疯緭鍏ユ敞鍐岄偖绠?>
      </div>
      <div class="form-group">
        <label for="password">瀵嗙爜:</label>
        <input type="password" id="password" name="password" required placeholder="璇疯緭鍏ュ瘑鐮?>
      </div>
      <button type="submit" id="loginButton">鐧诲綍</button>
    </form>
    <div id="message" class="message"></div>
    <div class="links">
      <a href="./login.html">杩斿洖鏅€氱櫥褰?/a>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const loginForm = document.getElementById('carrierLoginForm');
      const messageDiv = document.getElementById('message');
      const loginButton = document.getElementById('loginButton');

      function showMessage(text, isError = false) {
        messageDiv.textContent = text;
        messageDiv.className = isError ? 'message error' : 'message success';
        messageDiv.style.display = 'block';

        // 3绉掑悗鑷姩闅愯棌
        setTimeout(() => {
          messageDiv.style.display = 'none';
        }, 3000);
      }

      loginForm.addEventListener('submit', async function(event) {
        event.preventDefault();
        
        const email = document.getElementById('email').value.trim();
        const password = document.getElementById('password').value;

        // 鍓嶇楠岃瘉
        if (!email || !password) {
          showMessage('閭鍜屽瘑鐮佷笉鑳戒负绌?, true);
          return;
        }

        // 绠€鍗曢偖绠辨牸寮忛獙璇?        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        if (!emailRegex.test(email)) {
          showMessage('璇疯緭鍏ユ湁鏁堢殑閭鍦板潃', true);
          return;
        }

        try {
          // 鏄剧ず鍔犺浇鐘舵€?          loginButton.textContent = '鐧诲綍涓?..';
          loginButton.disabled = true;

          // 鍙戦€佺櫥褰曡姹傚埌鎵胯繍鍟嗙櫥褰旳PI
          console.log('姝ｅ湪鍙戦€佺櫥褰曡姹傚埌 /api/tenant-web/login');
          const response = await fetch('/api/tenant-web/login', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify({ 
              email: email, 
              password: password 
            })
          });

          console.log('鏀跺埌鍝嶅簲:', response.status);

          if (response.ok) {
            const data = await response.json();
            console.log('鐧诲綍鍝嶅簲鏁版嵁:', data);

            // 妫€鏌ュ搷搴旀牸寮忓苟瀛樺偍 token
            let token = null;
            if (data && data.data && data.data.token) {
              // 鏂版牸寮忥細token 鍦?data.token 涓?              token = data.data.token;
            } else if (data && data.token) {
              // 鏃ф牸寮忥細token 鐩存帴鍦ㄩ《灞?              token = data.token;
            }

            if (token) {
              localStorage.setItem('tenantToken', token);
              localStorage.setItem('userRole', 'carrier'); // 璁剧疆鐢ㄦ埛瑙掕壊涓烘壙杩愬晢
              console.log('Token宸蹭繚瀛?', token.substring(0, 20) + '...');

              showMessage('鐧诲綍鎴愬姛锛佹鍦ㄨ烦杞?..', false);

              // 璺宠浆鍒版壙杩愬晢鎺у埗鍙?              setTimeout(() => {
                console.log('鎵ц璺宠浆鍒?/carrier-dashboard.html');
                window.location.href = '/carrier-dashboard.html';
              }, 1000);
            } else {
              console.error('鐧诲綍鍝嶅簲涓湭鍖呭惈鏈夋晥 token:', data);
              throw new Error('鐧诲綍鍝嶅簲涓湭鍖呭惈鏈夋晥 token');
            }
          } else {
            const errorData = await response.json().catch(() => ({}));
            console.error('鐧诲綍澶辫触鍝嶅簲:', errorData);
            let errorMessage = errorData.message || errorData.error || `鐧诲綍澶辫触 (${response.status})`;
            throw new Error(errorMessage);
          }
        } catch (error) {
          console.error('鐧诲綍閿欒:', error);
          showMessage(error.message || '鐧诲綍澶辫触锛岃绋嶅悗閲嶈瘯', true);
        } finally {
          // 鎭㈠鎸夐挳鐘舵€?          loginButton.textContent = '鐧诲綍';
          loginButton.disabled = false;
        }
      });
    });
  </script>
</body>
</html>
