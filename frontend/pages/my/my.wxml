<!-- pages/my/my.wxml -->
<view class="container">
  <view class="user-section">
    <block wx:if="{{userLoggedIn}}">
      <view class="user-info">
        <text class="name">你好, {{userInfo.name || '用户'}}</text>
        <text class="phone">{{userInfo.phone || '未绑定手机'}}</text>
      </view>
      <button class="logout-btn" bindtap="handleLogout">退出登录</button>
    </block>
    <block wx:else>
      <button class="login-btn" bindtap="handleLogin">微信一键登录</button>
    </block>
  </view>

  <view class="features-section">
    <view class="feature-item" bindtap="navigateToSettings">
      <text>设置</text>
    </view>
    <view class="feature-item" bindtap="navigateToRecharge">
      <text>充值</text>
    </view>
    <view class="feature-item" bindtap="navigateToPoints">
      <text>积分管理</text>
    </view>
  </view>
</view>