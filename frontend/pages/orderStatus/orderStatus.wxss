/* pages/orderStatus/orderStatus.wxss */
.container {
  padding: 20rpx;
}

.loading-container {
  text-align: center;
  padding: 50rpx;
  color: #999;
}

.error-container {
  text-align: center;
  padding: 50rpx;
  color: #f44336;
}

.order-detail {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-top: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.order-header {
  text-align: center;
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #eee;
}

.label {
  color: #666;
  font-size: 28rpx;
}

.value {
  color: #333;
  font-size: 28rpx;
  word-break: break-all;
}

.refresh-btn {
  margin-top: 30rpx;
  width: 100%;
  background-color: #4caf50;
  color: white;
  border: none;
  padding: 15rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
}