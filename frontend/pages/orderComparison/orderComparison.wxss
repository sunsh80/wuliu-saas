.container {
  padding: 20rpx;
  background-color: #f5f5f5;
}

.order-item {
  background-color: #ffffff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #eee;
}

.order-id {
  font-weight: bold;
  font-size: 32rpx;
}

.status {
  padding: 5rpx 15rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #ffffff;
}

.status-pending {
  background-color: #ffc107; /* Bootstrap warning */
}

.status-bid_success {
  background-color: #28a745; /* Bootstrap success */
}

.status-deal_success {
  background-color: #007bff; /* Bootstrap primary */
}

.status-cancelled {
  background-color: #dc3545; /* Bootstrap danger */
}

.order-details {
  margin-bottom: 20rpx;
}

.detail-item {
  display: block;
  margin-bottom: 8rpx;
  font-size: 28rpx;
  color: #666;
}

.bids-section {
  margin-top: 20rpx;
  padding-top: 15rpx;
  border-top: 1rpx solid #eee;
}

.bids-title {
  font-weight: bold;
  font-size: 30rpx;
  margin-bottom: 10rpx;
  display: block;
}

.bid-item {
  background-color: #f9f9f9;
  border-radius: 8rpx;
  padding: 15rpx;
  margin-bottom: 10rpx;
}

.bid-tenant,
.bid-price,
.bid-time,
.bid-rating {
  display: block;
  margin-bottom: 5rpx;
  font-size: 26rpx;
  color: #333;
}

.select-btn {
  margin-top: 10rpx;
  background-color: #007bff;
  color: white;
  border: none;
  border-radius: 5rpx;
  padding: 10rpx 15rpx;
  font-size: 26rpx;
}

.no-bids {
  text-align: center;
  color: #999;
  font-style: italic;
  padding: 20rpx 0;
}