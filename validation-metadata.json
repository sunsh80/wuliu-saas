{
  "naming_convention": {
    "frontend_js_variables": "camelCase (e.g., orderId, carrierId)",
    "backend_api_path_params": "snake_case (e.g., order_id, carrier_id)",
    "database_fields": "snake_case (e.g., order_id, carrier_id)",
    "request_body_params": "camelCase (e.g., orderId, carrierId)",
    "description": "API参数命名规范"
  },
  "phone": {
    "pattern": "^1[3-9][0-9]{9}$",
    "description": "中国手机号格式",
    "example": "13800138000",
    "database_field": ["phone", "contact_phone", "driver_phone", "customer_phone"]
  },
  "username": {
    "pattern": "^[a-zA-Z0-9_-]{3,20}$",
    "description": "用户名格式",
    "example": "user_name_123",
    "database_field": ["username"]
  },
  "name": {
    "pattern": "^[\\u4e00-\\u9fa5a-zA-Z0-9_-]{1,50}$",
    "description": "姓名格式（支持中文）",
    "example": "张三",
    "database_field": ["name", "contact_person", "driver_name"]
  },
  "address": {
    "pattern": "^[\\u4e00-\\u9fa5a-zA-Z0-9\\s\\S]{1,200}$",
    "description": "地址格式",
    "example": "北京市朝阳区某某街道123号",
    "database_field": ["address"]
  },
  "email": {
    "pattern": "^[^\\s@]+@[^\\s@]+\\.[^\\s@]+$",
    "description": "邮箱格式",
    "example": "user@example.com",
    "database_field": ["email"]
  },
  "password": {
    "min_length": 6,
    "description": "密码最小长度",
    "database_field": ["password"]
  }
}