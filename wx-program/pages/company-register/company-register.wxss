/* pages/company-register/company-register.wxss */
.container {
  padding: 20px;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.input-group {
  margin-bottom: 20px;
  background-color: white;
  border-radius: 8px;
  padding: 15px;
}

.label {
  display: block;
  font-size: 14px;
  color: #333;
  margin-bottom: 8px;
}

.input-field {
  width: 100%;
  height: 40px;
  border: 1px solid #e0e0e0;
  border-radius: 4px;
  padding: 0 10px;
  box-sizing: border-box;
}

.radio-label {
  margin-right: 20px; /* 间距 */
  display: inline-block; /* 并排显示 */
  font-size: 14px;
  color: #333;
}

.submit-btn {
  width: 100%;
  height: 45px;
  line-height: 45px;
  background-color: #007aff;
  color: white;
  border-radius: 8px;
  font-size: 16px;
  margin-top: 20px;
}