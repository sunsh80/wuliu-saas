/* pages/my/my.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.user-section {
  background-color: #ffffff;
  padding: 40rpx 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.user-info .name {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.user-info .phone, .user-info .tenant-name {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx; /* 添加间距以区分不同的信息 */
}

.login-btn, .logout-btn {
  width: 80%;
  margin-top: 30rpx;
  background-color: #007aff;
  color: #ffffff;
  border: none;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: 32rpx;
}

.features-section {
  background-color: #ffffff;
  border-radius: 10rpx;
  overflow: hidden;
}

.feature-item {
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #eee;
  font-size: 30rpx;
  color: #333;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.feature-item:last-child {
  border-bottom: none;
}

.feature-item text {
  flex-grow: 1;
}

.feature-item navigator {
  color: #007aff;
  font-size: 30rpx;
}