/* pages/order/confirm.wxss */
.container {
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 20rpx;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.content {
  background-color: white;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.section {
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.form-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 15rpx;
  padding: 10rpx 0;
  border-bottom: 1rpx solid #eee;
}

.label {
  font-size: 26rpx;
  color: #666;
  width: 160rpx;
  flex-shrink: 0;
}

.delivery-point-card {
  display: flex;
  flex-direction: column;
  padding: 15rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
  margin-bottom: 10rpx;
}

.dp-address {
  font-size: 26rpx;
  color: #333;
}

.dp-contact {
  font-size: 24rpx;
  color: #666;
  margin-top: 5rpx;
}

.edit-btn,
.delete-btn {
  background-color: #f0f0f0;
  color: #666;
  font-size: 22rpx;
  padding: 8rpx 16rpx;
  border-radius: 6rpx;
  border: 1rpx solid #ddd;
  margin-left: 10rpx;
  line-height: 1;
  height: auto;
}

.add-btn {
  background-color: #1890ff;
  color: white;
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  border-radius: 6rpx;
  margin-top: 10rpx;
  display: block;
  width: fit-content;
}

.recommendation {
  background-color: #fffbe6;
  border: 1rpx solid #ffe58f;
  border-radius: 6rpx;
  padding: 15rpx;
  margin-top: 10rpx;
}

.recommendation view {
  font-size: 26rpx;
  color: #333;
  margin-bottom: 5rpx;
}

.submit-btn {
  width: 100%;
  background-color: #1890ff;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 20rpx 0;
  font-size: 30rpx;
  margin-top: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(24, 144, 255, 0.2);
}

.submit-btn::after {
  border: none;
}