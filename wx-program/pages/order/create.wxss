/* pages/order/create.wxss */
/* 完全继承原 order.wxss 样式，仅新增按钮 */

/* 复用原 order.wxss 中的所有样式 */
.container {
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 20rpx;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.content {
  background-color: white;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.section {
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.form-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 15rpx;
  padding: 10rpx 0;
  border-bottom: 1rpx solid #eee;
}

.label {
  font-size: 26rpx;
  color: #666;
  width: 160rpx;
  flex-shrink: 0;
}

.picker-container,
.address-input-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.picker-view,
.input-wrapper,
.address-input-container input {
  flex: 1;
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #333;
}

.picker-view {
  justify-content: space-between;
}

.picker-arrow {
  color: #999;
  font-size: 32rpx;
}

.input-wrapper input {
  flex: 1;
  padding: 10rpx 0;
  border: none;
  font-size: 26rpx;
  color: #333;
  outline: none;
}

.map-btn {
  background-color: #f0f0f0;
  color: #666;
  font-size: 22rpx;
  padding: 8rpx 16rpx;
  border-radius: 6rpx;
  border: 1rpx solid #ddd;
  margin-left: 10rpx;
  line-height: 1;
  height: auto;
}

.map-btn::after {
  border: none;
}

.dimensions-row {
  display: flex;
  flex-direction: row;
  gap: 15rpx;
  flex-wrap: wrap;
  margin-bottom: 15rpx;
}

.dimension-item {
  flex: 1;
  min-width: 150rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.dimension-item text {
  font-size: 24rpx;
  color: #666;
}

.address-input {
  flex: 1;
  padding: 8rpx;
  font-size: 26rpx;
  border: 1rpx solid #ddd;
  border-radius: 4rpx;
}

.volume-input {
  background-color: #f5f5f5;
  color: #666;
  padding: 8rpx;
  border-radius: 4rpx;
  font-size: 26rpx;
}

/* 新增：下一步按钮 */
.next-btn {
  width: 100%;
  background-color: #1890ff;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 20rpx 0;
  font-size: 30rpx;
  margin-top: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(24, 144, 255, 0.2);
}

.next-btn::after {
  border: none;
}