/* pages/order/order.wxss - 订单提交页面样式 */

.container {
  padding: 40rpx 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 为 .form-group 添加垂直间距 */
.form-group {
  display: flex;
  flex-direction: column;
  gap: 15rpx; /* 标签和输入框之间的间距 */
  margin-bottom: 30rpx; /* 组与组之间的间距 */
  background-color: white;
  padding: 30rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.label {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  line-height: 1.5; /* 增加标签文字行高 */
}

.input {
  height: 80rpx;
  padding: 0 30rpx;
  border-radius: 10rpx;
  background-color: #f9f9f9;
  font-size: 32rpx;
  line-height: 80rpx; /* 输入框内文字行高 */
  border: 1rpx solid #e0e0e0; /* 可选：增加边框 */
  box-sizing: border-box; /* 确保 padding 不会增加总宽度 */
}

.textarea {
  height: 160rpx;
  padding: 20rpx 30rpx;
  border-radius: 10rpx;
  background-color: #f9f9f9;
  font-size: 32rpx;
  line-height: 48rpx; /* 多行文本框内文字行高 */
  border: 1rpx solid #e0e0e0; /* 可选：增加边框 */
  box-sizing: border-box;
  overflow-y: auto; /* 如果内容超出高度，可以滚动 */
}

.submit-btn {
  width: 100%;
  height: 80rpx;
  margin-top: 40rpx; /* 增加按钮上方间距 */
  padding: 0;
  background-color: #007AFF;
  color: white;
  font-size: 36rpx;
  line-height: 80rpx; /* 按钮文字行高 */
  border-radius: 10rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  border: none; /* 移除默认边框 */
}

/* 可选：为按钮添加按下效果 */
.submit-btn:active {
  background-color: #0056b3; /* 按下时的颜色 */
}