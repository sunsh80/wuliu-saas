/* pages/order/order.wxss */

.container {
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 20rpx;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.content {
  background-color: white;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.section {
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.form-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 15rpx;
  padding: 10rpx 0;
  border-bottom: 1rpx solid #eee;
}

.label {
  font-size: 26rpx;
  color: #666;
  width: 160rpx;
  flex-shrink: 0;
}

.picker-container,
.address-input-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.picker-view,
.input-wrapper,
.address-input-container input {
  flex: 1;
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #333;
}

.picker-view {
  justify-content: space-between;
}

.picker-arrow {
  color: #999;
  font-size: 32rpx;
}

.input-wrapper input {
  flex: 1;
  padding: 10rpx 0;
  border: none;
  font-size: 26rpx;
  color: #333;
  outline: none;
}

.map-btn {
  background-color: #f0f0f0;
  color: #666;
  font-size: 22rpx;
  padding: 8rpx 16rpx;
  border-radius: 6rpx;
  border: 1rpx solid #ddd;
  margin-left: 10rpx;
  line-height: 1;
  height: auto;
}

.map-btn::after {
  border: none;
}

/* 新增：横向排列长宽高的样式 */
.dimensions-row {
  display: flex;
  flex-direction: row;
  gap: 15rpx;
  flex-wrap: wrap;
  margin-bottom: 15rpx;
}

/* 新增：每个长宽高项目的样式 */
.dimension-item {
  flex: 1;
  min-width: 150rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

/* 新增：体积和车型同一行的样式 */
.volume-vehicle-row {
  display: flex;
  flex-direction: row;
  gap: 15rpx;
  margin-bottom: 15rpx;
}

.volume-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.volume-input {
  background-color: #f5f5f5;
  color: #666;
  padding: 8rpx;
  border-radius: 4rpx;
  font-size: 26rpx;
}

.vehicle-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.vehicle-picker {
  padding: 10rpx 0;
  font-size: 26rpx;
  color: #333;
}

/* 新增：地址选择模式提示 */
.address-mode-tip {
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #fffbe6;
  border: 1rpx solid #ffe58f;
  border-radius: 6rpx;
  padding: 10rpx 15rpx;
  margin-top: 10rpx;
  gap: 8rpx;
}

.tip-icon {
  font-size: 28rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #b7791f;
  flex: 1;
}

/* 货物备注输入框样式 */
.cargo-remark-input {
  width: 100%;
  padding: 8rpx;
  border: 1rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 24rpx;
  margin-top: 8rpx;
  box-sizing: border-box;
}

.address-input {
  flex: 1;
  padding: 8rpx;
  font-size: 26rpx;
  border: 1rpx solid #ddd;
  border-radius: 4rpx;
}