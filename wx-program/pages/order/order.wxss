/* pages/order/order.wxss */

.container {
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 20rpx;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.content {
  background-color: white;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.section {
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.form-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 15rpx;
  padding: 10rpx 0;
  border-bottom: 1rpx solid #eee;
}

.label {
  font-size: 26rpx;
  color: #666;
  width: 160rpx;
  flex-shrink: 0;
}

.picker-container,
.address-input-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.picker-view,
.input-wrapper,
.address-input-container input {
  flex: 1;
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #333;
}

.picker-view {
  justify-content: space-between;
}

.picker-arrow {
  color: #999;
  font-size: 32rpx;
}

.input-wrapper input {
  flex: 1;
  padding: 10rpx 0;
  border: none;
  font-size: 26rpx;
  color: #333;
  outline: none;
}

.map-btn {
  background-color: #f0f0f0;
  color: #666;
  font-size: 22rpx;
  padding: 8rpx 16rpx;
  border-radius: 6rpx;
  border: 1rpx solid #ddd;
  margin-left: 10rpx;
  line-height: 1;
  height: auto;
}

.map-btn::after {
  border: none;
}

/* 新增：横向排列长宽高的样式 */
.dimensions-row {
  display: flex;
  flex-direction: row; /* 关键：设置为横向 */
  gap: 15rpx; /* 设置三个项目之间的间距 */
  flex-wrap: wrap; /* 允许换行，如果屏幕太小 */
  margin-bottom: 15rpx;
}

/* 新增：每个长宽高项目的样式 */
.dimension-item {
  flex: 1; /* 每个项目占据相等的剩余空间 */
  min-width: 150rpx; /* 设置最小宽度，防止过窄 */
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}