/* pages/orderList/orderList.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.loading-container,
.error-container,
.empty-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 40vh; /* 调整高度以适应不同内容 */
  text-align: center;
}

.error-text {
  color: #ff4d4f;
  margin-bottom: 20rpx;
}

.retry-btn {
  margin-top: 20rpx;
  background-color: #007aff;
  color: white;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}

.order-card {
  background-color: white;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  border-bottom: 1rpx solid #eee;
  padding-bottom: 16rpx;
}

.order-id {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.order-status {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  color: white;
}

.status-created,
.status-pending_claim { background-color: #faad14; } /* 待认领 */
.status-claimed,
.status-quoted { background-color: #1890ff; } /* 待选择 */
.status-awarded,
.status-dispatched { background-color: #52c41a; } /* 已分配/已发车 */
.status-in_transit { background-color: #722ed1; } /* 运输中 */
.status-delivered { background-color: #52c41a; } /* 已送达 */
.status-cancelled { background-color: #f5222d; } /* 已取消 */

.order-details {
  /* padding-top: 16rpx; */
}

.detail-row {
  display: flex;
  margin-bottom: 12rpx;
  font-size: 28rpx;
  line-height: 1.5;
}

.label {
  color: #999;
  min-width: 140rpx; /* 固定标签宽度 */
  margin-right: 16rpx;
}

.value {
  color: #333;
  flex: 1; /* 剩余空间由值填充 */
  word-break: break-all; /* 长文本换行 */
}