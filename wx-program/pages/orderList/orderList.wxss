/* pages/orderList/orderList.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.submit-order-btn {
  width: 100%;
  background-color: #007aff;
  color: #ffffff;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  font-size: 32rpx;
  padding: 20rpx 0;
}

.order-list {
  margin-bottom: 20rpx;
}

.order-item {
  background-color: #ffffff;
  padding: 20rpx;
  margin-bottom: 15rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.order-number {
  font-weight: bold;
  font-size: 30rpx;
  color: #333;
}

.order-status {
  font-size: 26rpx;
  color: #007aff;
}

.order-details {
  display: flex;
  flex-direction: column;
}

.detail {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 5rpx;
}

.empty-list {
  text-align: center;
  color: #999;
  padding: 60rpx 0;
  font-size: 28rpx;
}

.refresh-btn {
  width: 100%;
  background-color: #007aff;
  color: #ffffff;
  border-radius: 10rpx;
  font-size: 32rpx;
  padding: 20rpx 0;
  margin-top: 20rpx;
}