/* pages/login/login.wxss */
.container {
  padding: 20px;
  background-color: #f5f5f5;
  min-height: 100vh;
  box-sizing: border-box; /* 确保padding不影响高度计算 */
}

.method-toggle {
  display: flex;
  background-color: white;
  border-radius: 8px;
  overflow: hidden;
  margin-bottom: 20px;
}

.toggle-item {
  flex: 1;
  text-align: center;
  line-height: 40px;
  font-size: 14px;
  color: #666;
}

.toggle-item.active {
  color: #007aff;
  background-color: #eef5ff;
}

.input-group {
  margin-bottom: 20px;
  background-color: white;
  border-radius: 8px;
  padding: 15px;
}

.label {
  display: block;
  font-size: 14px;
  color: #333;
  margin-bottom: 8px;
}

.input-field {
  width: 100%;
  height: 40px;
  border: 1px solid #e0e0e0;
  border-radius: 4px;
  padding: 0 10px;
  box-sizing: border-box;
}

.login-btn {
  width: 100%;
  height: 45px;
  line-height: 45px;
  background-color: #007aff;
  color: white;
  border-radius: 8px;
  font-size: 16px;
  margin-top: 20px;
}

/* 新增：注册引导区域样式 */
.register-section {
  margin-top: 30px; /* 与上面的登录按钮保持距离 */
  display: flex;
  align-items: center;
  justify-content: center;
}

.no-account-text {
  font-size: 14px;
  color: #666;
  margin-right: 10px; /* 与按钮保持距离 */
}

.register-btn {
  background: none; /* 去掉默认背景 */
  border: none; /* 去掉默认边框 */
  padding: 0; /* 去掉默认内边距 */
  font-size: 14px;
  color: #007aff; /* 设置为蓝色可点击颜色 */
  line-height: 1; /* 确保文本垂直居中 */
}

.register-btn::after {
  border: none; /* 去掉button默认的伪元素边框 */
}