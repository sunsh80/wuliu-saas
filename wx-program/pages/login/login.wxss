/* pages/login/login.wxss */
.container {
  padding: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 100vh; /* 占满屏幕高度，可选 */
}

.title {
  font-size: 24px;
  margin-bottom: 30px;
}

/* 登录方式切换按钮容器 */
.login-method-toggle {
  display: flex;
  width: 100%;
  margin-bottom: 20px;
  border: 1px solid #ccc; /* 边框 */
  border-radius: 4px; /* 圆角 */
  overflow: hidden; /* 防止按钮超出边界 */
}

/* 单个切换按钮样式 */
.method-btn {
  flex: 1; /* 均匀分配空间 */
  padding: 12px 0;
  text-align: center;
  background-color: #f5f5f5; /* 默认背景色 */
  color: #333; /* 默认文字颜色 */
  cursor: pointer; /* 鼠标指针样式，小程序中无效，但保留 */
  transition: background-color 0.3s ease; /* 背景色过渡效果 */
  font-weight: normal; /* 重置字体粗细 */
  box-sizing: border-box; /* 包含 padding 和 border 在宽度内 */
}

/* 激活状态的按钮样式 */
.method-btn.active {
  background-color: #007aff; /* 激活背景色 */
  color: white; /* 激活文字颜色 */
}

/* 表单项样式 */
.form-item {
  width: 100%;
  margin-bottom: 20px;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.form-item text {
  margin-bottom: 5px;
  font-weight: bold;
}

.form-item input {
  width: 100%;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 4px;
  box-sizing: border-box; /* 确保 padding 不影响总宽度 */
}

/* 登录按钮样式 */
.login-btn {
  width: 100%;
  background-color: #007aff;
  color: white;
  padding: 12px;
  border: none;
  border-radius: 4px;
  font-size: 16px;
  margin-top: 20px;
}

/* 注册链接样式 */
.register-link {
  margin-top: 20px;
  color: #007aff; /* 链接颜色 */
  font-size: 14px;
  text-decoration: underline; /* 下划线 */
}