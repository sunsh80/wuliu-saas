/* pages/index/index.wxss */

.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh; /* 确保容器占满屏幕高度 */
  padding: 0;
  margin: 0;
  box-sizing: border-box;
  background-color: #f5f5f5; /* 整体背景色 */
}

/* Header Style - 优化对齐 */
.header {
  display: flex;
  justify-content: center; /* 水平居中 */
  align-items: center;     /* 垂直居中 */
  padding: 30rpx 0;        /* 上下留白 */
  background-color: var(--nav-bar-bg-color, #4CAF50); /* 使用变量或默认绿色 */
  color: white;            /* 文字颜色 */
  text-align: center;      /* 文字居中 */
  position: relative;      /* 为可能的定位元素提供参照 */
  height: 100rpx;          /* 明确设置固定高度 */
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: inherit; /* 继承 header 的文字颜色 */
  line-height: 1.2; /* 行高，改善垂直对齐感 */
  margin: 0;
  padding: 0;
}

/* Main Content Style */
.content {
  flex: 1; /* 占据剩余空间 */
  padding: 20rpx;
  box-sizing: border-box;
  overflow-y: auto; /* 允许内容滚动 */
}

.section {
  background-color: white;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

/* Button Grid Style */
.button-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200rpx, 1fr));
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.action-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  border-radius: 8rpx;
  border: none;
  font-size: 28rpx;
  font-weight: 500;
  cursor: pointer;
  transition: background-color 0.3s ease;
  box-sizing: border-box;
}

.action-btn::after {
  border: none;
}

.action-btn.primary {
  background-color: #4CAF50; /* 主色调 */
  color: white;
}

.action-btn.primary:hover {
  background-color: #43A047; /* 主色调深色 */
}

.action-btn.secondary {
  background-color: #f0f0f0; /* 次级背景色 */
  color: #666;
}

.action-btn.secondary:hover {
  background-color: #e0e0e0; /* 次级背景色深色 */
}

.btn-text {
  font-size: inherit;
  font-weight: inherit;
  color: inherit;
}

/* Feature List Style */
.feature-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.feature-item {
  display: flex;
  align-items: center;
  padding: 10rpx 0;
}

.feature-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.4;
  margin-left: 10rpx;
}

/* 新增注册按钮样式 */
.registration-button {
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
}

/* 响应式调整 (可选) */
@media (min-width: 768px) {
  .container {
    max-width: 750rpx;
    margin: 0 auto;
  }
}