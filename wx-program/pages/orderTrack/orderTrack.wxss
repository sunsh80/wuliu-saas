/* miniprogram/pages/orderTrack/orderTrack.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.loading {
  text-align: center;
  padding-top: 100rpx;
  font-size: 32rpx;
  color: #999;
}

.error-container {
  text-align: center;
  padding-top: 100rpx;
}

.error-text {
  display: block;
  color: #e74c3c;
  margin-bottom: 20rpx;
}

.retry-btn {
  width: 200rpx;
}

.order-info-section {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.order-id {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.status-tag {
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #fff;
}

.status-created { background-color: #3498db; }
.status-claimed { background-color: #f39c12; }
.status-awarded { background-color: #9b59b6; }
.status-dispatched { background-color: #1abc9c; }
.status-in_transit { background-color: #e67e22; }
.status-delivered { background-color: #2ecc71; }
.status-cancelled { background-color: #e74c3c; }

.deadline-countdown {
  background-color: #fef9e7;
  border: 1rpx solid #f4d03f;
  padding: 10rpx 15rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.countdown-text {
  color: #d35400;
  font-weight: bold;
  font-size: 28rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #eee;
  font-size: 28rpx;
  color: #666;
}

.info-item label {
  font-weight: bold;
  color: #333;
  min-width: 120rpx; /* 固定标签宽度 */
  margin-right: 10rpx;
}

.login-prompt-section {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 40rpx 20rpx;
  text-align: center;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.prompt-text {
  display: block;
  margin-bottom: 20rpx;
  color: #666;
  font-size: 28rpx;
}

.login-btn {
  width: 50%;
  margin: 0 auto;
}

.quotes-section {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.sort-options {
  display: flex;
  gap: 10rpx;
}

.sort-btn {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border: 1rpx solid #ddd;
  border-radius: 20rpx;
  background-color: #f8f9fa;
  color: #6c757d;
}

.sort-btn.active {
  background-color: #007aff;
  color: white;
  border-color: #007aff;
}

.quotes-list {
  margin-bottom: 30rpx;
}

.quote-card {
  border: 2rpx solid #ddd;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
  background-color: #fafafa;
}

.quote-card.selected {
  border-color: #007aff;
  background-color: #e3f2fd;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.carrier-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.rating {
  font-size: 24rpx;
  color: #f39c12;
}

.card-body {
  display: grid;
  grid-template-columns: 1fr 1fr; /* 两列布局 */
  gap: 10rpx;
}

.card-body .info-item {
  padding: 8rpx 0;
  border: none;
  font-size: 26rpx;
  color: #555;
}

.card-body .info-item label {
  font-weight: normal;
  color: #777;
  min-width: auto; /* 不固定标签宽度 */
  margin-right: 5rpx;
}

.price {
  color: #e74c3c;
  font-weight: bold;
}

.select-btn {
  width: 100%;
  margin-top: 20rpx;
}

.select-btn.disabled {
  background-color: #bdc3c7;
  color: #ecf0f1;
}

.no-quotes-section {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 40rpx 20rpx;
  text-align: center;
  margin-top: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.no-quotes-text {
  color: #999;
  font-size: 28rpx;
}